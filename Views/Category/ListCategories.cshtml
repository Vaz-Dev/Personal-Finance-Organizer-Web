
@{
    ViewData["Title"] = "List of Categories";
    var data = (PFO_Web.Models.Data)ViewBag.Data;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>List of Categories</title>
    @for (int i = 0; i < data.Categories.Count; i++)
    {
        <div class="row">
            <div class="col">
				@data.Categories[i].Name
            </div>
            <div class="col">
                @data.Categories[i].Type
            </div>
            <div class="col">
                @{
					var transactions = data.Transactions.Where(t => t.Category == data.Categories[i]).ToList();
                }
				@transactions.Count() transactions.
            </div>
        </div>
    }
</head>
<body>
</body>
</html>
